                                            url = App.RemoveQueryFromUrl(url, "Key");
                                        }
                                        if ($("input[name='arelation']:checked").val() == 1) {
                                            url = App.AddQueryToUrl(url, "IsFollow", "1");
                                        }
                                        else {
                                            url = App.RemoveQueryFromUrl(url, "IsFollow");
