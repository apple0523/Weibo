            if (allGroups != null)
            {
                for (int i = 0; i < allGroups.Count; i++)
                {
            <p sel="1">
                <input type="checkbox" class="labelbox" id="group_selector_item_@{@allGroups[i].ID}" /><label for="group_selector_item_@{@allGroups[i].ID}" title="@{@allGroups[i].Name}">@{@allGroups[i].Name}
